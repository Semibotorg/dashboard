{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2016",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "declaration": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "lib": ["es2021","dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}